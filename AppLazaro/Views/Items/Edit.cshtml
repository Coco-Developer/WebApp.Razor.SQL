@model AppLazaro.Models.Items

@{
    ViewData["Title"] = "Editar Item - AppLazaro";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Item</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="bg-light p-4 border rounded">
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="Nombre" class="font-weight-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del item" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="font-weight-bold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.14.1/dist/sweetalert2.min.js"></script>
    <script>
        // Mostrar mensaje de SweetAlert después de la acción
        $(document).ready(function () {
        @if (TempData["SweetAlertMessage"] != null)
        {
            <text>
                    Swal.fire({
                        icon: '@TempData["SweetAlertType"]',
                        title: '@TempData["SweetAlertMessage"]',
                        showConfirmButton: false,
                        timer: 2500
                    });
            </text>
        }
                });
    </script>
}
