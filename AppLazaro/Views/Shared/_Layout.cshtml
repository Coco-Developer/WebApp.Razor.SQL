<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Estilos Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <!-- Estilos SweetAlert -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.14.1/dist/sweetalert2.min.css" />

    <!-- Otros estilos -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" integrity="sha384-75C3yih2ljAmvM3J9X+tJW+ULI1Nm/tLhqOh+XPR5SCz7phON0uNOzn3lZBlk7n" crossorigin="anonymous" />


    <style>
        /* Estilos personalizados */
        body {
            padding-top: 70px; /* Ajuste para evitar que el navbar cubra contenido al hacer scroll */
            background-size: cover;
            background-repeat: no-repeat;
            background-color: lightgrey;
        }

        .navbar {
            background-color: #2c3e50; /* Color de fondo del navbar urbano */
        }

        .navbar-nav .nav-link {
            color: white; /* Color del texto de los enlaces del navbar */
        }

        .footer {
            background-color: #2c3e50; /* Color de fondo del footer urbano */
            color: white;
            text-align: center;
            padding: 10px 0;
            font-size: 14px;
        }

            .footer a {
                color: #18bc9c; /* Color de los enlaces del footer */
            }

                .footer a:hover {
                    color: white; /* Color de los enlaces del footer al pasar el mouse */
                }

        /* Estilos para vista en grilla */
        #itemList.grid-view .grid-item {
            display: block;
        }

        /* Estilos para vista en lista/tabla */
        #itemList.list-view table {
            width: 100%;
            border-collapse: collapse;
        }

        #itemList.list-view th,
        #itemList.list-view td {
            padding: 0.75rem;
            border-bottom: 1px solid #dee2e6;
            vertical-align: middle;
        }

        #itemList.list-view th {
            background-color: #f8f9fa;
            border-top: 2px solid #dee2e6;
            text-align: left;
            font-weight: bold;
        }

        #itemList.list-view .btn-group {
            margin-top: 0.5rem;
        }

        /* Ocultar por defecto la vista en lista/tabla */
        #itemList.list-view {
            display: none;
        }

       
    </style>

    @RenderSection("Styles", required: false) <!-- Renderiza la sección de estilos si está definida -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    AppLazaro
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Items" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Items" asp-action="Index">ITEMS</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

       
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LAZARO JOAQUIN 29009 <br /> <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    

    <!-- Scripts SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.14.1/dist/sweetalert2.min.js"></script>

    <!-- Scripts jQuery y Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts adicionales -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Incluye la vista parcial de SweetAlert -->
    <partial name="_SweetAlertPartial" />

    @RenderSection("Scripts", required: false) <!-- Renderiza la sección de scripts si está definida -->
</body>
</html>
